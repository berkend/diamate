# DiaMate Backend Environment Variables
# Copy this to .env and fill in your values

# AI APIs (at least one required)
GROQ_API_KEY=gsk_your_groq_key_here
OPENAI_API_KEY=sk-your_openai_key_here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Apple IAP Verification (optional, for production)
APPLE_SHARED_SECRET=your_apple_shared_secret

# Google Play Billing (optional, for production)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# RevenueCat (alternative to direct IAP verification)
REVENUECAT_API_KEY=your_revenuecat_api_key

# Dexcom OAuth (for CGM integration, optional)
DEXCOM_CLIENT_ID=your_dexcom_client_id
DEXCOM_CLIENT_SECRET=your_dexcom_client_secret
DEXCOM_REDIRECT_URI=https://diamate.org/oauth/dexcom/callback
